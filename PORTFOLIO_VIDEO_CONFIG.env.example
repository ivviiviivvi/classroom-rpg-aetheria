# Portfolio Video Configuration Template
# Copy this file to PORTFOLIO_VIDEO_CONFIG.env and customize for your video production

# ============================================================================
# CANDIDATE INFORMATION
# ============================================================================

# Your full name as it will appear in the video
CANDIDATE_NAME="Your Full Name"

# The role you're targeting (e.g., "Product Manager", "Technical Lead", "Creative Director")
CANDIDATE_ROLE_TARGET="Product Strategist & Systems Architect"

# Your target audience for this video
TARGET_AUDIENCE="Non-technical Executive Leadership"

# ============================================================================
# VIDEO SPECIFICATIONS
# ============================================================================

# Target length for the video (in minutes or "X minutes Y seconds")
VIDEO_LENGTH_TARGET="4 minutes"

# Overall tone of the video
TONE="Clear, confident, intelligent, approachable"

# Narrative framework to follow
NARRATIVE_FRAMEWORK="Problem → Insight → Solution → Impact → Why Me"

# Voice style for narration
VOICE_STYLE="Calm professional with thoughtful pacing"

# Avatar mode: "none" (voice only), "subtle talking-head", or "full presenter"
AVATAR_MODE="subtle talking-head"

# ============================================================================
# BRAND ELEMENTS
# ============================================================================

# Path to your logo file (leave empty if none)
BRAND_LOGO_PATH=""

# Primary brand color (hex code with #)
BRAND_COLOR_PRIMARY="#3b82f6"

# Secondary brand color (optional)
BRAND_COLOR_SECONDARY="#8b5cf6"

# Accent color for highlights
BRAND_COLOR_ACCENT="#f59e0b"

# Primary font family
BRAND_FONT_PRIMARY="Inter"

# Secondary font family (for headings)
BRAND_FONT_SECONDARY="Inter"

# ============================================================================
# CALL TO ACTION
# ============================================================================

# What you want viewers to do (e.g., "Schedule a consultation", "Review my portfolio", "Book a call")
CTA_OUTCOME="Schedule a consultation"

# URL where they should go (your website, calendar link, LinkedIn, etc.)
CTA_URL="https://yourwebsite.com/contact"

# Alternative contact method (optional)
CTA_EMAIL="your.email@example.com"

# LinkedIn profile URL (optional)
CTA_LINKEDIN="https://linkedin.com/in/yourprofile"

# Portfolio URL (optional)
CTA_PORTFOLIO="https://yourportfolio.com"

# ============================================================================
# PROJECT CONTEXT
# ============================================================================

# The repository being showcased
REPO_ROOT="https://github.com/ivviiviivvi/classroom-rpg-aetheria"

# Project name
PROJECT_NAME="Aetheria - The Living Classroom"

# One-sentence project description
PROJECT_DESCRIPTION="A gamified learning management system that transforms courses into immersive game worlds"

# Key problem the project solves
PROJECT_PROBLEM="40% of students drop out of online courses due to boring, engagement-free experiences"

# Key innovation or differentiator
PROJECT_INNOVATION="AI-powered instant feedback combined with RPG progression systems and adaptive theming"

# Measurable impact (if applicable)
PROJECT_IMPACT="Immediate feedback replacing week-long waits, 5+ hours saved per teacher weekly, 20-40% retention increase"

# ============================================================================
# VIDEO PRODUCTION SETTINGS
# ============================================================================

# Video resolution (1080p, 4K, etc.)
VIDEO_RESOLUTION="1080p"

# Aspect ratio (16:9 for YouTube, 1:1 for Instagram, 9:16 for TikTok/Stories)
VIDEO_ASPECT_RATIO="16:9"

# Frame rate (typically 24fps, 30fps, or 60fps)
VIDEO_FRAME_RATE="30fps"

# Export format (MP4, MOV, etc.)
VIDEO_FORMAT="MP4"

# Include captions? (true/false)
INCLUDE_CAPTIONS="true"

# Caption style (white-on-black-box, yellow, etc.)
CAPTION_STYLE="white-on-black-box"

# ============================================================================
# AUDIO SETTINGS
# ============================================================================

# Include background music? (true/false)
INCLUDE_MUSIC="true"

# Music style (ambient, corporate, uplifting, none)
MUSIC_STYLE="ambient"

# Music volume level in dB (-20 to -30 recommended for background)
MUSIC_VOLUME="-22dB"

# Include sound effects? (true/false)
INCLUDE_SOUND_EFFECTS="false"

# ============================================================================
# CONTENT CUSTOMIZATION
# ============================================================================

# Show actual product UI or only diagrams? (actual/diagrams/mixed)
VISUAL_APPROACH="mixed"

# Include specific metrics and data? (true/false)
INCLUDE_METRICS="true"

# Show source code at all? (true/false)
SHOW_CODE="false"

# Include your photo/headshot? (true/false)
INCLUDE_HEADSHOT="true"

# Include company logos (past employers/clients)? (true/false)
INCLUDE_COMPANY_LOGOS="false"

# ============================================================================
# DISTRIBUTION CHANNELS
# ============================================================================

# Where will this video be published? (comma-separated: youtube,linkedin,portfolio,email)
DISTRIBUTION_CHANNELS="linkedin,portfolio,email"

# Video title for platforms
VIDEO_TITLE="Product Strategy Portfolio: Aetheria Learning Platform"

# Video description/caption
VIDEO_DESCRIPTION="How I transformed a traditional learning management system into an engaging game-world experience using systems thinking, AI, and human-centered design."

# Tags/keywords (comma-separated)
VIDEO_TAGS="product management,systems design,edtech,gamification,portfolio"

# ============================================================================
# ADVANCED OPTIONS
# ============================================================================

# Color grading style (natural, warm, cool, corporate, cinematic)
COLOR_GRADING="corporate"

# Animation style (minimal, moderate, dynamic)
ANIMATION_STYLE="moderate"

# Pacing (slow, medium, fast)
PACING="medium"

# Complexity level (beginner-friendly, intermediate, advanced)
COMPLEXITY_LEVEL="intermediate"

# Industry focus (tech, education, consulting, general)
INDUSTRY_FOCUS="education,tech"

# ============================================================================
# NOTES
# ============================================================================

# Any additional notes or special requirements for production
PRODUCTION_NOTES="Focus on business outcomes and strategic thinking over technical implementation details"
